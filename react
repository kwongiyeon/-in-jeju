import React, { useState } from 'react';

const Counter = () => {
    const [count, setCount] = useState(0); // 카운터 값을 관리하는 상태

    return (
        <div>
            <h2>Count: {count}</h2>
            <button onClick={() => setCount(count + 1)}>Increase</button>
            <button onClick={() => setCount(count - 1)}>Decrease</button>
        </div>
    );
};

export default Counter;
